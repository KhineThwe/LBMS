<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jp.library.repository.RoleRepository">

	<resultMap type="com.jp.library.entity.Role" id="role">
		<id column="id" property="id"></id>
		<result column="name" property="name" />
	</resultMap>

	<insert id="insertRole"
		parameterType="com.jp.library.entity.Role">
		INSERT INTO role (name)
		VALUES (#{name})
	</insert>

	<select id="getRoleById" resultType="com.jp.library.entity.Role">
		SELECT * FROM role WHERE id = #{id}
	</select>

	<select id="getAllRoles" resultType="com.jp.library.entity.Role">
		SELECT * FROM role
	</select>

	<update id="updateRole"
		parameterType="com.jp.library.entity.Role">
		UPDATE role SET name = #{name} WHERE id = #{id}
	</update>

	<delete id="deleteRole" parameterType="long">
		DELETE FROM role WHERE id = #{id}
	</delete>

</mapper>
